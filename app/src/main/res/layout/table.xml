<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_negro">

    <TableRow>

        <TextView
            android:id="@+id/row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="start"
            android:padding="20dp"
            android:text="@string/label_ingreso"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/total_ingreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#ffffff"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:padding="20dp"/>

    </TableRow>
    <TableRow>

        <TextView
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="start"
            android:text="@string/label_egreso"
            android:textSize="20sp"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/total_egreso"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#ffffff"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:padding="20dp"/>


    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_gastos"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="start"
            android:background="#ffffff"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/total_tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#ffffff"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:padding="20dp"/>


    </TableRow>

</TableLayout>


